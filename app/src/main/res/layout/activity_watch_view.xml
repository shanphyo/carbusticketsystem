<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.watchView">

    <ahmed.easyslider.EasySlider
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/slider"/>
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="470dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#212F3C"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"

                    android:background="@drawable/ic_person_black_24dp"
                    />
                <TextView
                    android:id="@+id/wprice"
                    android:layout_width="270dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/alltext"/>

            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#212F3C"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:paddingTop="10dp"

                    android:background="@drawable/ic_access_time_black_24dp"
                    />
                <TextView
                    android:id="@+id/wdtime"
                    android:layout_width="270dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/alltext"/>

            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#212F3C"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@drawable/tour"
                    />
                <TextView
                    android:id="@+id/wd"
                    android:layout_width="270dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/alltext"/>

            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#212F3C"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@drawable/ic_train_black_24dp"
                    />
                <TextView
                    android:id="@+id/wplace"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/alltext"/>
                <TextView
                    android:id="@+id/tv_bordingplace"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:background="@drawable/ic_add_location_black_24dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#212F3C"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@drawable/ic_train_black_24dp"
                    />
                <TextView
                    android:id="@+id/wdroplace"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/alltext"/>
                <TextView
                    android:id="@+id/tv_droppingplace"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:background="@drawable/ic_add_location_black_24dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#212F3C"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@drawable/ic_accessibility_black_24dp"
                    />
                <TextView
                    android:id="@+id/wservice"
                    android:layout_width="270dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/alltext"/>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>