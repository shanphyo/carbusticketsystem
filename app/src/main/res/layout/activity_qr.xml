<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Qr"
    android:background="@color/mainColor1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/upColor"
        android:gravity="center"
        android:padding="20dp"
        android:text="Take A Screenshot To This QR Code"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor2"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:textColor="@color/alltext"
        android:text="Show this QR Code , paid and then enjoy your trip."
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_go_to_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Go To Home Page"
        android:textColor="@color/alltext"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_saveqr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Save Ticket"
        android:textColor="@color/alltext"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

</LinearLayout>