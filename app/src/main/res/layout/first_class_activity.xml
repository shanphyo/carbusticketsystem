<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="45dp"

        >

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_arrow_back_black_24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Choose Your Seat"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/firstclassbuyticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/btn_background"
                android:text="Buy Ticket1"
                android:textColor="@android:color/white"
                android:visibility="gone"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/supertv_driver"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Driver"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/firstrow"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button

                        android:id="@+id/sseat1"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/no1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="A1"

                        />

                    <Button
                        android:id="@+id/sseat2"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="A2" />

                    <Button
                        android:id="@+id/sseat3"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat2"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="A3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondrow"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/firstrow"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button

                        android:id="@+id/sseat5"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/no1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="B1" />

                    <Button
                        android:id="@+id/sseat6"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="B2" />

                    <Button
                        android:id="@+id/sseat7"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat2"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="B3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdrow"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/secondrow"
                    android:layout_marginTop="10dp"
                    android:gravity="center">


                    <Button

                        android:id="@+id/sseat9"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/no1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="C1" />

                    <Button
                        android:id="@+id/sseat10"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="C2" />

                    <Button
                        android:id="@+id/sseat11"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat2"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="C3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourthrow"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/thirdrow"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button

                        android:id="@+id/sseat13"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/no1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="D1" />

                    <Button
                        android:id="@+id/sseat14"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="D2" />

                    <Button
                        android:id="@+id/sseat15"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat2"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="D3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fifthrow"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/fourthrow"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button

                        android:id="@+id/sseat17"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/no1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="E1" />

                    <Button
                        android:id="@+id/sseat18"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat1"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="E2" />

                    <Button
                        android:id="@+id/sseat19"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/supertv_driver"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/seat2"
                        android:background="@drawable/shape3"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:text="E3" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sevenrow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/fifthrow"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking seat:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/eightrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="4"
                >

                <Button

                    android:elevation="2dp"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_weight="1"

                    android:background="@drawable/shape3"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available \nSeat"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    />
                <Button

                    android:elevation="2dp"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    android:text="B"
                    android:textSize="20dp"

                    android:background="@drawable/shape4"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unavailable \nSeat"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>