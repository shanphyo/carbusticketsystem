<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor1"
    android:orientation="vertical"

    android:padding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_carname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Car Name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/locsp_carName"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner_background"


                android:padding="10dp" />
            <TextView
                android:id="@+id/loctv_locname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Location Name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/locet_locname"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_background"
                android:hint="Location Name"
                android:padding="10dp"
                android:textColor="@color/alltext"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:maxLines="1"/>
            <TextView
            android:id="@+id/loctv_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Province"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

            <Spinner
                android:id="@+id/locsp_pro"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner_background"

                android:padding="10dp"

                />


            <TextView
                android:id="@+id/locty_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Latitute"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/locet_lat"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_background"
                android:hint="Latitute"
                android:padding="10dp"
                android:textColor="@color/alltext"
                android:inputType="numberDecimal"
                android:paddingLeft="20dp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/loctv_lon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Latitute"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/locet_lon"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_background"
                android:hint="Latitute"
                android:padding="10dp"
                android:textColor="@color/alltext"
                android:inputType="numberDecimal"
                android:paddingLeft="20dp"
                android:maxLines="1"/>

            <Button
                android:id="@+id/locbtn_savelocation"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_background"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>



</LinearLayout>