<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.customerinfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="45dp"

        >

        <TextView
            android:id="@+id/back_arrowcustomerinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Customer Info"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:elevation="2dp"
        android:layout_width="350dp"
        android:layout_height="420dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/btn_background"
            android:layout_margin="10dp"

            >

            <TextView
                android:id="@+id/admin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_background"
                android:padding="15dp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Mg Mg"
                android:textColor="@color/alltext"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/ad_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Phone"
                    android:textColor="@color/alltext"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/admin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text=""
                    android:inputType="number"
                    android:textColor="@color/alltext"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/ad_nrc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Nrc No"
                    android:textColor="@color/alltext"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/admin_nrc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/alltext"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/ad_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Email"
                    android:textColor="@color/alltext"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/admin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/alltext"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/admin_seatno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/edit_background"
                android:maxLines="2"
                android:minLines="1"
                android:padding="10dp"
                android:text="Seat Number"

                android:gravity="center"
                android:textColor="@color/alltext"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>