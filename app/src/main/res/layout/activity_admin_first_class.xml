<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainColor2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="45dp"

                >

                <TextView
                    android:id="@+id/back_arrowadminticket"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_arrow_back_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="View Ticket"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/supertv_driver"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_span="4"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="10dp"
                android:text="Driver"
                android:textColor="@android:color/white"

                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/firstrow"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/supertv_driver"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/no1"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp" />

                <Button

                    android:id="@+id/fcseat1"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/no1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="A1"

                    />

                <Button
                    android:id="@+id/fcseat2"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="A2" />

                <Button
                    android:id="@+id/fcseat3"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat2"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="A3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondrow"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/firstrow"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/no2"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="20dp" />

                <Button

                    android:id="@+id/fcseat5"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/no1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="B1" />

                <Button
                    android:id="@+id/fcseat6"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="B2" />

                <Button
                    android:id="@+id/fcseat7"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat2"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="B3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdrow"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/secondrow"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/no3"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="20dp" />

                <Button

                    android:id="@+id/fcseat9"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/no1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="C1" />

                <Button
                    android:id="@+id/fcseat10"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="C2" />

                <Button
                    android:id="@+id/fcseat11"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat2"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="C3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthrow"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/thirdrow"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/no4"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="20dp" />

                <Button

                    android:id="@+id/fcseat13"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/no1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="D1" />

                <Button
                    android:id="@+id/fcseat14"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="D2" />

                <Button
                    android:id="@+id/fcseat15"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat2"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="D3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthrow"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/fourthrow"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/no5"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="20dp" />

                <Button

                    android:id="@+id/fcseat17"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/no1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="E1" />

                <Button
                    android:id="@+id/fcseat18"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="E2" />

                <Button
                    android:id="@+id/fcseat19"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/supertv_driver"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/seat2"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="E3"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sevenrow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/fifthrow"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Booking seat:"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/eightrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sevenrow"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:weightSum="4">

                <Button

                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape3"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Available \nSeat"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    />

                <Button

                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape4"

                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="B"
                    android:textSize="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Unavailable \nSeat"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>